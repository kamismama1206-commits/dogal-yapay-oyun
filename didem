<body>

<div class="game-container">
    <h2>√áevremizi Tanƒ±yalƒ±m</h2>
    <div class="score-board">
        <span id="scoreText">Puan: 0</span>
        <span id="questionCount">Soru: 1/10</span>
    </div>
    <div class="question-card" id="card">
        <span id="emoji">üå≤</span>
        <span class="question-text" id="qText">Orman</span>
    </div>
    <div class="btn-container">
        <button class="btn btn-dogal" onclick="checkAnswer('dogal')">Doƒüal √áevre üçÉ</button>
        <button class="btn btn-yapay" onclick="checkAnswer('yapay')">Yapay √áevre üèóÔ∏è</button>
    </div>
    <div class="feedback" id="feedback"></div>
</div>

<script>
    const questions = [
        { text: "Orman", type: "dogal", emoji: "üå≤" },
        { text: "Oyun Parkƒ±", type: "yapay", emoji: "üé°" },
        { text: "G√∂l", type: "dogal", emoji: "üåä" },
        { text: "Okul Bah√ßesi", type: "yapay", emoji: "üè´" },
        { text: "Deniz", type: "dogal", emoji: "üê¨" },
        { text: "K√∂pr√º", type: "yapay", emoji: "üåâ" },
        { text: "Maƒüara", type: "dogal", emoji: "ü¶á" },
        { text: "Akvaryum", type: "yapay", emoji: "üê†" },
        { text: "Peri Bacalarƒ±", type: "dogal", emoji: "üóø" },
        { text: "Baraj", type: "yapay", emoji: "üß±" }
    ];

    let currentQuestionIndex = 0;
    let score = 0;
    let shuffledQuestions = [];

    function startGame() {
        shuffledQuestions = questions.sort(function() { return 0.5 - Math.random() });
        currentQuestionIndex = 0;
        score = 0;
        updateUI();
    }

    function updateUI() {
        if (currentQuestionIndex >= questions.length) {
            endGame();
            return;
        }
        const currentQ = shuffledQuestions[currentQuestionIndex];
        const card = document.getElementById('card');
        
        // Animasyon hilesi
        card.classList.remove('animate');
        void card.offsetWidth; 
        card.classList.add('animate');

        document.getElementById('emoji').innerText = currentQ.emoji;
        document.getElementById('qText').innerText = currentQ.text;
        document.getElementById('scoreText').innerText = "Puan: " + score;
        document.getElementById('questionCount').innerText = "Soru: " + (currentQuestionIndex + 1) + "/10";
        document.getElementById('feedback').innerText = "";
        
        // Butonlarƒ± tekrar aktif et
        const buttons = document.querySelectorAll('.btn');
        for (let i = 0; i < buttons.length; i++) {
            buttons[i].disabled = false;
        }
    }

    function checkAnswer(userChoice) {
        const correctType = shuffledQuestions[currentQuestionIndex].type;
        const feedbackEl = document.getElementById('feedback');
        
        if (userChoice === correctType) {
            score += 10;
            feedbackEl.innerText = "Harika! Doƒüru bildin.";
            feedbackEl.className = "feedback correct";
        } else {
            feedbackEl.innerText = "Dikkat et, bu diƒüer gruptaydƒ±.";
            feedbackEl.className = "feedback wrong";
        }

        currentQuestionIndex++;
        
        // Hƒ±zlƒ± tƒ±klamayƒ± engelle
        const buttons = document.querySelectorAll('.btn');
        for (let i = 0; i < buttons.length; i++) {
            buttons[i].disabled = true;
        }

        setTimeout(updateUI, 1000);
    }

    function endGame() {
        document.querySelector('.game-container').innerHTML = "<h2>Oyun Bitti!</h2><div style='font-size: 3em; margin: 20px;'>üåü</div><h3>Toplam Puanƒ±n: " + score + "</h3><button class='btn btn-dogal' onclick='location.reload()'>Tekrar Oyna</button>";
    }

    // Oyunu ba≈ülat
    startGame();
</script>

</body>
